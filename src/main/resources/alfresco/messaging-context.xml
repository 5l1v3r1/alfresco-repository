<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- Base Camel configuration -->
    <context:component-scan base-package="org.alfresco.repo.messaging.camel.configuration"/>
    <!-- Camel Producer -->
    <context:component-scan base-package="org.alfresco.repo.messaging.camel.producer"/>
    <!-- Camel Routes definitions -->
    <context:component-scan base-package="org.alfresco.repo.messaging.camel.routes"/>
    <!-- Enterprise addons -->
    <context:component-scan base-package="org.alfresco.enterprise.repo.messaging.camel.producer"/>
    <context:component-scan base-package="org.alfresco.enterprise.repo.messaging.camel.routes"/>
</beans>